<Page
    x:Class="HelpPen.Client.Windows.Pages.TestBindPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:taskList="using:HelpPen.Client.Windows.Pages.TaskList"
    mc:Ignorable="d" d:DataContext="{d:DesignInstance taskList:TestVM1}">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Orientation="Vertical">
            <TextBox Text="{Binding Path=NewTaskText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="10" />
            <TextBlock Text="{Binding Path=NewTaskText, Mode=OneWay, TargetNullValue='Not setted'}" Margin="10"  />
            <TextBox Text="{Binding Path=NewTaskText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="10" />
        </StackPanel>

    </Grid>
</Page>