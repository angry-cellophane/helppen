<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mvvm="using:HelpPen.Client.Common.MVVM">

    <LinearGradientBrush x:Key="MainApplicationBackgroundBrush" StartPoint="1,0" EndPoint="0,1">
        <GradientStop Color="#FF8EB5E3" Offset="0.255" />
        <GradientStop Color="#FFD8A1B0" Offset="1" />
    </LinearGradientBrush>

    <Style x:Name="DefaultPageStyle" TargetType="Page">
        <Setter Property="Background" Value="{StaticResource MainApplicationBackgroundBrush}" />
    </Style>
    

    <SolidColorBrush x:Key="LightFontBrush" Color="White" />

    <Style x:Name="DefaultTextBlockStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource LightFontBrush}" />
    </Style>

    <Style x:Name="DefaultTextBoxStyle" TargetType="TextBox">
        <Setter Property="Foreground" Value="{StaticResource LightFontBrush}" />
    </Style>

    <Style x:Name="DefaultPasswordBoxStyle" TargetType="PasswordBox">
        <Setter Property="Foreground" Value="{StaticResource LightFontBrush}" />
    </Style>

</ResourceDictionary>